<tpl name="site_settings_misc">
    <div id="content_misc" style="display: none">
        <div class="form_row">
            Fixed pages header&amp;footer rows source:
            <wsc_select id="inp_default_rows_page_id"/>
        </div>

        <div class="form_row">
            <wsc_checkbox id="inp_site_search_visible" title="Show search and site map control"/>
        </div>
        <div class="form_row">
            <wsc_checkbox id="inp_breadcrumbs_visible" title="Show breadcrumbs"/>
        </div>
        <div class="form_row">
            <wsc_checkbox id="inp_header_visible" title="Show main menu"/>
        </div>
        <div class="form_row">
            <wsc_checkbox id="inp_footer_visible" title="Show footer"/>
        </div>
    </div>
</tpl>    