<tpl name="websemble_signup">
    <div class="websemble_signup">
        <div class="form_box" id="top_text"></div>
        <script type="text/javascript" src="http://www.google.com/recaptcha/api/js/recaptcha_ajax.js"></script>
        <table>
            <tr>
                <td>
                    <div class="form_box">
                        <input type="text" name="email" id="inp_email" events="onfocus=onInputFocus;onblur=onInputBlur"
                               title="Enter your e-mail here"/>
                        <div id="msg_email" class="message_error" style="display: none">Incorrect email</div>
                        <div id="msg_email_used" class="message_error" style="display: none">Email is already used</div>
                    </div>
                </td>
                <td class="facebook">
                    <a events="onclick=onFacebookClick" title="Facebook">
                        <img src="/static/app_websemble_signup/ws_signup.png"/>
                    </a>
                </td>
            </tr>
            <tr>
                <td colspan="2" id="captcha_cont"></td>
            </tr>
            <tr>
                <td colspan="2">
                    <div id="msg_recaptcha" class="message_error"
                         style="display: none">The CAPTCHA wasn't entered correctly.
                    </div>
                </td>
            </tr>
        </table>

        <div class="form_box" id="btn_submit_box" style="height: 30px">
            <button id="btn_submit" events="onclick=onSubmitClick">Start</button>
        </div>

        <div class="form_box" id="msg_loading" style="height: 30px; display: none">
            <img src="/static/site.images/loading_bar.gif"/>
        </div>

        <div class="form_box" id="bottom_text"></div>
    </div>
</tpl>